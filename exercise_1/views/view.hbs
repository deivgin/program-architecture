<html>
  <head>
    <meta charset='utf-8' />
    <title>App - View Project Page</title>
    <link rel='stylesheet' href='/main.css' />
  </head>
  <body>
    <main>
      {{#with project}}
        <header>
          <h1>{{name}}</h1>
          <a href='/' class='button button__primary'>Back</a>
        </header>

        <article class='project'>
          <div class='project__metadata'>
            Status:
            {{status}}
            {{#if dueDate}}
              <p>Due by: {{dueDate}}</p>
            {{/if}}
          </div>

          {{#if description}}
            <div class='form__input__group'>
              <textarea
                name='description'
                rows='10'
                readonly
              >{{description}}</textarea>
            </div>
          {{else}}
            <textarea
              name='description'
              placeholder='No description available.'
              rows='10'
              readonly
            ></textarea>
          {{/if}}

          <div class='project__toolbar'>
            <form action='/edit/{{id}}' method='get'>
              <button class='button' type='submit'>Edit</button>
            </form>
            <form action='/project/{{id}}' method='post'>
              <input type='hidden' name='_method' value='delete' />
              <button
                class='button button__warning'
                type='submit'
              >Delete</button>
            </form>
          </div>
        </article>

      {{/with}}
    </main>
  </body>
</html>
